@page "/search"
@inject PrezziarioOOEELombardia.Client.Services.PrezziarioApiClient ApiClient
@inject NavigationManager NavigationManager
@using PrezziarioOOEELombardia.Shared

<PageTitle>Ricerca - Prezziario OOEE Lombardia</PageTitle>

<div class="container-fluid mt-4">
    <h2 class="mb-4">Ricerca Avanzata</h2>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="searchTerm" class="form-label">Termine di ricerca</label>
                        <input type="text" class="form-control" id="searchTerm" @bind="searchTerm" 
                               placeholder="Inserisci codice voce o descrizione..." @onkeyup="HandleKeyUp">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Opzioni</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="searchFromEnd" @bind="searchFromEnd">
                            <label class="form-check-label" for="searchFromEnd">
                                Ricerca dagli ultimi livelli
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" @onclick="PerformSearch" disabled="@isSearching">
                @if (isSearching)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Ricerca in corso...</span>
                }
                else
                {
                    <i class="bi bi-search"></i>
                    <span>Cerca</span>
                }
            </button>
        </div>
    </div>

    @if (searchResult != null)
    {
        <div class="mb-3">
            <p class="text-muted">
                Trovati <strong>@searchResult.TotalCount</strong> risultati
                (pagina @searchResult.PageNumber di @searchResult.TotalPages)
            </p>
        </div>

        @if (searchResult.Results.Any())
        {
            <div class="row">
                @foreach (var voce in searchResult.Results)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100 voce-card" style="cursor: pointer;" @onclick="@(() => NavigateToDetail(voce.CodiceVoce))">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">@voce.CodiceVoce</h6>
                                <p class="card-text">@voce.DeclaratoriaVoce</p>
                                <div class="mt-2">
                                    <span class="badge bg-primary">â‚¬ @voce.PrezzoVoce.ToString("N2")</span>
                                    <span class="badge bg-secondary">@voce.UnitaMisuraVoce</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (searchResult.TotalPages > 1)
            {
                <nav aria-label="Paginazione risultati">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="@(() => ChangePage(currentPage - 1))">Precedente</button>
                        </li>
                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(searchResult.TotalPages, currentPage + 2); i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="@(() => ChangePage(pageNum))">@pageNum</button>
                            </li>
                        }
                        <li class="page-item @(currentPage == searchResult.TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="@(() => ChangePage(currentPage + 1))">Successivo</button>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info">
                Nessun risultato trovato per la ricerca.
            </div>
        }
    }
</div>

<style>
    .voce-card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transform: translateY(-2px);
        transition: all 0.2s;
    }
</style>

@code {
    private string searchTerm = "";
    private bool searchFromEnd = false;
    private bool isSearching = false;
    private SearchResultDTO? searchResult;
    private int currentPage = 1;
    private int pageSize = 12;

    private async Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return;

        currentPage = 1;
        await ExecuteSearch();
    }

    private async Task ExecuteSearch()
    {
        isSearching = true;
        
        var request = new SearchRequestDTO
        {
            SearchTerm = searchTerm,
            SearchFromEnd = searchFromEnd,
            PageNumber = currentPage,
            PageSize = pageSize
        };

        searchResult = await ApiClient.SearchAsync(request);
        isSearching = false;
    }

    private async Task ChangePage(int pageToNavigate)
    {
        if (pageToNavigate < 1 || (searchResult != null && pageToNavigate > searchResult.TotalPages))
            return;

        currentPage = pageToNavigate;
        await ExecuteSearch();
    }

    private void NavigateToDetail(string codiceVoce)
    {
        NavigationManager.NavigateTo($"/voce/{codiceVoce}");
    }

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await PerformSearch();
        }
    }
}
